{% extends 'base.html.twig' %}

{% block title %}Modifier votre profil{% endblock %}

{% block body %}

<main class="form-medium w-100 m-auto">

<h1 class="h4 mb-3 font-weight-normal">{{ "Modification utilisateur" | trans }}</h1>

<div class="pb-2">

    {% if user.thumbnail %} <img class="rounded-circle me-1" width="40" height="40"  src="{{ vich_uploader_asset(user,'thumbnailFile')}}" alt="">
    {% else %} <img src="{{ app.request.basePath }}/ressources/images/defaultProfil.png" width="40" height="40" > 
    {% endif %}
    
</div>

{#
